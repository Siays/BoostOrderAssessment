<Window x:Class="BoostOrderAssessment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        Title="Catalog" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Header -->
            <RowDefinition Height="50"/>
            <!-- Search Bar -->
            <RowDefinition Height="*"/>
            <!-- Product List -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="#00AEEF" Grid.Row="0" Height="50" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Back Arrow -->
                <Button Grid.Column="0" Width="40" Height="50" Background="Transparent" BorderThickness="0" Padding="0">
                    <TextBlock Text="&#x2039;" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

                <!-- Title -->
                <TextBlock Grid.Column="1" Text="Categories Name" FontSize="18" Foreground="White" VerticalAlignment="Center"/>

                <!-- Company Name -->
                <TextBlock Grid.Column="2" Text="Company Name" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <!-- Company Initials Circle -->
                <Border Grid.Column="3" Width="32" Height="32" CornerRadius="16" Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="CN" Foreground="#00AEEF" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <!-- Menu (three dots) -->
                <Button Grid.Column="4" Width="40" Height="50" Background="Transparent" BorderThickness="0" Padding="0">
                    <TextBlock Text="&#x22EE;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>

        <!-- SEARCH BAR -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1">
            <Grid Margin="15,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="20" Height="36">
                    <Grid>
                        <!-- TextBox -->
                        <TextBox x:Name="SearchBox" 
                 Background="Transparent" BorderThickness="0"
                 Padding="40,0,15,0" FontSize="14"
                 VerticalContentAlignment="Center"
                 Foreground="#333"
                 Text="{Binding ProductViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Search Icon (always visible) -->
                        <TextBlock Text="🔍" FontSize="14" Foreground="#999" 
                   Margin="15,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>

                        <!-- Placeholder Text -->
                        <TextBlock Text="Search" FontSize="14" Foreground="#999"
           Margin="40,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <!-- Default: hidden -->
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <!-- Show placeholder only when SearchBox.Text is empty -->
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                    </Grid>
                </Border>


                <!-- Cart Icon with Badge -->
                <Grid Grid.Column="1" Margin="15,0">
                    <!-- Cart Button -->
                    <Button Background="Transparent" BorderThickness="0" Width="30" Height="30" x:Name="CartButton" Click="CartButton_Click">
                        <TextBlock Text="🛒" FontSize="18" Foreground="Black"/>
                    </Button>

                    <!-- Badge (circle + count) -->
                    <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0"
                        Visibility="{Binding CartViewModel.BadgeVisibility}">
                        <Ellipse Width="20" Height="20" Fill="Red"/>
                        <TextBlock Text="{Binding CartViewModel.CartCount}" 
                   FontSize="10" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- PRODUCT LIST -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="White">
            <ItemsControl ItemsSource="{Binding ProductViewModel.Products}" Margin="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1" Padding="16,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- FIRST ROW -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>


                                    <!-- LEFT SIDE - PRODUCT INFO -->
                                    <StackPanel Grid.Column="0" 
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Left"
                                        Width="250">


                                        <!-- SKU and Stock (same line) -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding FirstSku}" 
                                               FontSize="12" Foreground="#888" 
                                               VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding StockDisplay}" 
                                               FontSize="12" Foreground="#4CAF50" 
                                               FontWeight="SemiBold" 
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Product Name (always between SKU and Price) -->
                                        <TextBlock Text="{Binding Name}" 
                                               FontSize="16" FontWeight="SemiBold" 
                                               Foreground="#333" 
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,4" 
                                               MaxWidth="250"/>

                                        <!-- Price -->
                                        <TextBlock Text="{Binding PriceDisplay}" 
                                               FontSize="18" FontWeight="Bold" 
                                               Foreground="#333"/>
                                    </StackPanel>


                                    <!-- RIGHT SIDE - PRODUCT IMAGE -->
                                    <Border Grid.Column="1" 
                                           Width="60" Height="60" 
                                           Background="#F0F0F0" 
                                           CornerRadius="8"
                                           BorderBrush="#E0E0E0" 
                                           BorderThickness="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top">
                                        <Image Stretch="UniformToFill" Width="60" Height="60">
                                            <Image.Source>
                                                <PriorityBinding>
                                                    <Binding Path="ImageUrl" />
                                                    <Binding Source="/BoostOrderAssessment;component/Assets/img_placeholder.png" />
                                                </PriorityBinding>
                                            </Image.Source>
                                            <Image.Clip>
                                                <RectangleGeometry Rect="0,0,60,60" RadiusX="8" RadiusY="8"/>
                                            </Image.Clip>
                                        </Image>
                                    </Border>
                                </Grid>

                                <!-- SECOND ROW - UOM AND QUANTITY CONTROLS -->
                                <Grid Grid.Row="1" HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                                        <!-- UOM Dropdown -->
                                        <Border Background="White" 
                                               BorderBrush="#DDD" 
                                               BorderThickness="1" 
                                               CornerRadius="8"
                                               Height="36"
                                               MinWidth="70"
                                               Margin="0,0,8,0">
                                            <ComboBox ItemsSource="{Binding Units}" 
                                                     SelectedIndex="0"
                                                     FontSize="12"
                                                     FontWeight="SemiBold"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Padding="12,0,8,0"
                                                     VerticalContentAlignment="Center">
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Padding" Value="12,8"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                        </Border>

                                        <!-- Minus Button -->
                                        <Border Background="#F8F8F8" 
                                               BorderBrush="#DDD" 
                                               BorderThickness="1" 
                                               CornerRadius="8,0,0,8"
                                               Width="36" Height="36">
                                            <Button Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="#666"
                                                Content="−"
                                                Command="{Binding DecreaseCommand}"/>
                                        </Border>

                                        <!-- Quantity Input -->
                                        <Border Background="White"
                                               BorderBrush="#DDD" 
                                               BorderThickness="0,1,0,1"
                                               Width="40" Height="36">
                                            <TextBox Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 TextAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"/>
                                                                            </Border>

                                        <!-- Plus Button -->
                                        <Border Background="#F8F8F8" 
                                               BorderBrush="#DDD" 
                                               BorderThickness="1" 
                                               CornerRadius="0,8,8,0"
                                               Width="36" Height="36">
                                            <Button Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="#666"
                                                Content="+"
                                                Command="{Binding IncreaseCommand}"/>
                                        </Border>

                                        <!-- Plus Circle Icon -->
                                        <Border Background="#00AEEF" 
                                               Width="36" Height="36" 
                                               CornerRadius="18"
                                               Margin="8,0,0,0">
                                            <Button
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Content="+"
                                                Command="{Binding Path=DataContext.CartViewModel.AddToCartCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                CommandParameter="{Binding}" />
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>